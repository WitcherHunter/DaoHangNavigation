<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F4F6F7">
    <RelativeLayout
        android:id="@+id/qwe"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/blue_41C7D6">
        <TextView
            android:id="@+id/tvTrainHeadTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/WHITE"
            android:layout_marginLeft="15dp"
            android:layout_centerInParent="true"
            android:text=""/>

        <TextView
            android:id="@+id/tvSendCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/WHITE"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/tvTrainLoginStatel"
            android:text="T:100 P:10 G:3000"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgPhoneSem"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/tvTrainNetworkType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/WHITE"
            android:layout_toLeftOf="@+id/imgPhoneSem"
            android:layout_centerVertical="true"
            android:text=""
            />
        <ImageView
            android:id="@+id/gpsSignalSem"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvTrainNetworkType"
            android:layout_marginLeft="20dp"
            android:src="@drawable/gps_signal_disable"
            />
        <TextView
            android:id="@+id/tvTrainLoginStatel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/WHITE"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/part_two_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/part2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="第二部分"
                    android:textSize="20sp"
                    android:textColor="@color/gray_8A8A8A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/part_three_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/part3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="第三部分"
                    android:textSize="20sp"
                    android:textColor="@color/gray_8A8A8A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/studytime_search_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/search"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="学时查询"
                    android:textSize="20sp"
                    android:textColor="@color/gray_8A8A8A"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/video_study_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shiping"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="视频学车"
                    android:textSize="20sp"
                    android:textColor="@color/gray_8A8A8A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mock_exam_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/monitor_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="模拟考试"
                    android:textSize="20sp"
                    android:textColor="@color/gray_8A8A8A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bt_auto_detec_examine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shezhi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="参数设置"
                    android:textSize="20sp"
                    android:textColor="@color/gray_8A8A8A"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


